<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LinkTower Promo Animation</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      overflow: hidden;
      font-family: system-ui, -apple-system, sans-serif;
    }

    /* Main animation frame - 3:2 aspect ratio at ~720p */
    .animation-frame {
      width: 1200px;
      height: 800px;
      position: relative;
      overflow: hidden;
      background: transparent;
    }

    /* Rotated container */
    .rotated-container {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(30deg) scale(1.4);
      width: 100%;
      height: 100%;
      display: flex;
      gap: 24px;
      padding: 40px;
    }

    /* Column styles */
    .column {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 16px;
      position: relative;
    }

    /* Scrolling track for seamless loop */
    .scroll-track {
      display: flex;
      flex-direction: column;
      gap: 16px;
    }

    /* Left and right columns scroll up */
    .column.left .scroll-track,
    .column.right .scroll-track {
      animation: scroll-up 20s linear infinite;
    }

    /* Center column scrolls down */
    .column.center .scroll-track {
      animation: scroll-down 20s linear infinite;
    }

    @keyframes scroll-up {
      0% {
        transform: translateY(0);
      }
      100% {
        transform: translateY(-50%);
      }
    }

    @keyframes scroll-down {
      0% {
        transform: translateY(-50%);
      }
      100% {
        transform: translateY(0);
      }
    }

    /* Link card styles */
    .link-card {
      background: white;
      border-radius: 24px;
      padding: 24px;
      display: flex;
      flex-direction: column;
      transition: all 0.3s ease;
      border: 2px solid rgba(0, 0, 0, 0.1);
      min-height: 120px;
      flex-shrink: 0;
    }

    .link-card.has-image {
      padding: 0;
      overflow: hidden;
    }

