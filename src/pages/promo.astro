  <script>
    // Simple client-side recording using MediaRecorder API
    let mediaRecorder: MediaRecorder | null = null;
    let recordedChunks: Blob[] = [];

    const recordBtn = document.getElementById('recordBtn') as HTMLButtonElement;
    const toggleControlsBtn = document.getElementById('toggleControlsBtn') as HTMLButtonElement;
    const status = document.getElementById('status') as HTMLDivElement;

    let controlsHidden = false;

    toggleControlsBtn.addEventListener('click', () => {
      controlsHidden = !controlsHidden;
      document.body.classList.toggle('hide-controls', controlsHidden);
      toggleControlsBtn.textContent = controlsHidden ? 'Show Controls' : 'Hide Controls';
    });

    recordBtn.addEventListener('click', async () => {
      if (!mediaRecorder || mediaRecorder.state === 'inactive') {
        try {
          // Capture the animation frame
          const stream = await (navigator.mediaDevices as any).getDisplayMedia({
            video: {
              mediaSource: 'screen',
              width: 1200,
              height: 800,
              frameRate: 30
            }
          });

          recordedChunks = [];
          mediaRecorder = new MediaRecorder(stream, {
            mimeType: 'video/webm;codecs=vp9',
            videoBitsPerSecond: 5000000
          });

          mediaRecorder.ondataavailable = (event) => {
            if (event.data.size > 0) {
              recordedChunks.push(event.data);
            }
          };

          mediaRecorder.onstop = () => {
            const blob = new Blob(recordedChunks, { type: 'video/webm' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'linktower-promo.webm';
            a.click();
            URL.revokeObjectURL(url);
            status.textContent = 'Download started!';
            setTimeout(() => {
              status.textContent = 'Ready';
            }, 3000);
          };

          mediaRecorder.start();
          recordBtn.textContent = 'Stop Recording';
          status.textContent = 'Recording...';

          // Auto-stop after 20 seconds (one full loop)
          setTimeout(() => {
            if (mediaRecorder && mediaRecorder.state === 'recording') {
              mediaRecorder.stop();
              stream.getTracks().forEach((track: MediaStreamTrack) => track.stop());
              recordBtn.textContent = 'Start Recording';
              status.textContent = 'Processing...';
            }
          }, 20000);

        } catch (err) {
          console.error('Error starting recording:', err);
          status.textContent = 'Recording failed';
        }
      } else {
        mediaRecorder.stop();
        mediaRecorder.stream.getTracks().forEach((track: MediaStreamTrack) => track.stop());
        recordBtn.textContent = 'Start Recording';
        status.textContent = 'Processing...';
      }
    });
  </script>
