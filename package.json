{
  "name": "mori-link",
  "description": "Host your own link in bio page, featuring a contact form and simple blog",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:test": "cross-env PUBLIC_USE_TEST_SITE_CONFIG=true PUBLIC_USE_TEST_BLOG=true astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "go-live": "pnpm install && pnpm run build && pnpm run deploy:win",
    "deploy": "./scripts/deploy.sh",
    "deploy:win": "wsl \"./scripts/deploy.sh\"",
    "export:frames": "pnpm exec playwright test export-video.spec.ts --reporter=list",
    "export:video": "pnpm export:frames && ffmpeg -y -framerate 30 -i promo-frames/frame-%04d.png -c:v libx264 -preset medium -crf 23 -pix_fmt yuv420p public/promo-export.mp4",
    "export:webm": "pnpm export:frames && ffmpeg -y -framerate 30 -i promo-frames/frame-%04d.png -c:v libvpx-vp9 -crf 30 -b:v 0 public/promo-export.webm",
    "export:gif": "pnpm export:frames && ffmpeg -y -framerate 30 -i promo-frames/frame-%04d.png -vf \"fps=15,scale=540:-1:flags=lanczos,split[s0][s1];[s0]palettegen[p];[s1][p]paletteuse\" public/promo-export.gif"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/rss": "^4.0.9",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/tailwind": "^5.1.2",
    "astro": "^4.16.7",
    "astro-icon": "^1.1.1",
    "sharp": "^0.34.2",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@iconify-json/fluent-emoji-flat": "^1.2.3",
    "@iconify-json/fluent-emoji-high-contrast": "^1.2.3",
    "@iconify-json/logos": "^1.2.4",
    "@iconify-json/lucide": "^1.2.39",
    "@iconify-json/material-symbols": "^1.2.20",
    "@iconify-json/material-symbols-light": "^1.2.20",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/typography": "^0.5.15",
    "@vitest/ui": "^4.0.10",
    "cross-env": "^7.0.3",
    "daisyui": "^4.12.14",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.56.1",
    "pngjs": "^7.0.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "vitest": "^4.0.10"
  }
}
